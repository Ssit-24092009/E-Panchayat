<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/grivence_category_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="grivence category"
            />
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@id/grivence_category_id"
            android:id="@+id/grivence_fullname_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            />
        <TextView
            android:id="@+id/grivence_ward_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ward no."
            android:layout_below="@id/grivence_fullname_id"/>

        <TextView
            android:layout_below="@id/grivence_ward_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grivence_details"
            android:text="Grivence_details"/>

        <LinearLayout
            android:id="@+id/grivence_l1"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint Date: "/>

            <TextView
                android:id="@+id/grivence_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19 Oct, 2019"/>


        </LinearLayout>

        <TextView
            android:layout_alignParentEnd="true"
            android:layout_below="@id/grivence_l1"
            android:id="@+id/grivence_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19:48 PM"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>